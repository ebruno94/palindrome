@using PalindromeProject.Models;
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="Palindrome/Display" method="post">
                <div class="form-group">
                    <label for="word">Enter a word to see if it's a palindrome: </label>
                    <input type="text" name="word" id="word">
                </div>
                <button type="submit" id="submit" class="btn">SUBMIT</button>
            </form>
        </div>
    </div>
</div>
